#include <dt-bindings/zmk/matrix_transform.h> // Put this with the other includes at the top of your dtsi
#include <physical_layouts.dtsi>

/ {
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };


    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <3>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)      RC(0,11) RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6) 
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)      RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6) 
            RC(3,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)      RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(3,6) 
               RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)           RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) 
        >;
    };


    physical_layout0: physical_layout_0 { 
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        kscan = <&kscan0>; 
        transform = <&default_transform>; 
        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 150    0  275       0     0     0>
            , <&key_physical_attrs 100 100  100  362       0     0     0>
            , <&key_physical_attrs 100 100  200  312       0     0     0>
            , <&key_physical_attrs 100 100  300  300       0     0     0>
            , <&key_physical_attrs 100 100  400  325       0     0     0>
            , <&key_physical_attrs 100 100  513  363    2400   563   413>
            , <&key_physical_attrs 100 100  887  363 (-2400)   937   413>
            , <&key_physical_attrs 100 100 1000  325       0     0     0>
            , <&key_physical_attrs 100 100 1100  300       0     0     0>
